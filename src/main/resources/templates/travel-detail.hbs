{{#partial "content"}}

    <p>Content:</p>

    <p>{{ travel.title }}</p>
    <h5>Location description:</h5>
    <p> {{ travel.description }}</p>
    <h5>Post status:</h5>
    <p>
        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}

        <a href="/travel/{{travel.id}}/update">Edit this post</a><br>
        <a href="/travel/{{travel.id}}/delete">DELETE this post (no undo)</a>
    </p>

{{/partial}}

{{> layout.hbs}}